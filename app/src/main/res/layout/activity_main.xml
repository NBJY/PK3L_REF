<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="#0F4C81"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@drawable/menu"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="냉장고를 비워줘!"
            android:textColor="#79d9cf"
            android:fontFamily="@font/bmeuljiro"/>
    </LinearLayout>
    <LinearLayout
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <LinearLayout
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmdohyeon"
                android:text="장바구니"
                android:textSize="25sp"/>
            <ImageView
                android:src="@drawable/spliter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#262626"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmdohyeon"
                android:text="냉장고"
                android:textSize="25sp"/>
            <ImageView
                android:src="@drawable/spliter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmdohyeon"
                android:text="레시피"
                android:textSize="25sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="#79d9cf"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_alignParentLeft="true"
                android:textColor="#979797"
                android:textSize="25sp"
                android:fontFamily="@font/bmhannapro"
                android:text="냉장실"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/folder_open"/>

        </RelativeLayout>

        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/ciercle_question"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmhannaair"
                    android:text="이름"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/ciercle_question"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmhannaair"
                    android:text="이름"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/ciercle_question"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmhannaair"
                    android:text="이름"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/ciercle_question"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmhannaair"
                    android:text="이름"
                    android:textSize="15sp"/>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="60dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:src="@drawable/ciercle_question"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmhannaair"
                    android:text="이름"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:layout_alignParentLeft="true"
                android:textColor="#979797"
                android:textSize="25sp"
                android:fontFamily="@font/bmhannapro"
                android:text="냉동실"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/folder_close"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:background="#F2F2F2"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/add_circle"/>


    </LinearLayout>
</LinearLayout>