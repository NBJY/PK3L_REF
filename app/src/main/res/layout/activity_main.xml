<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:background="@color/backgroundWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/chevron_left"/>
        <EditText
            android:layout_margin="10dp"
            android:background="@color/backgroundWhite"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:paddingLeft="20dp"
            android:hint="검색어를 입력해주세요."
            />
        <ImageView
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/search"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/lightGrey"></LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="최근"
            android:layout_margin="15dp"
            android:fontFamily="@font/bmhannaair"
            android:textColor="@color/black"/>

        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 된장찌개  x"
            android:background="@drawable/tag_back"/>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 제육볶음  x"
            android:background="@drawable/tag_back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:paddingLeft="10dp"
        android:background="@drawable/tag_back"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/bmhannaair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="전체삭제"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_forever"/>
    </LinearLayout>
    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#_ 인기 검색태그"
        android:fontFamily="@font/bmhannapro"
        android:layout_marginLeft="35dp"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/skyBlue"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 제육볶음 "
            android:background="@drawable/tag_back"/>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 미역국 "
            android:background="@drawable/tag_back"/>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 김치찌개 "
            android:background="@drawable/tag_back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 제육볶음 "
            android:background="@drawable/tag_back"/>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 미역국 "
            android:background="@drawable/tag_back"/>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 김치찌개 "
            android:background="@drawable/tag_back"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 제육볶음 "
            android:background="@drawable/tag_back"/>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 미역국 "
            android:background="@drawable/tag_back"/>
        <TextView
            android:textColor="@color/black"
            android:fontFamily="@font/bmhannaair"
            android:layout_margin="15dp"
            android:padding="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="# 김치찌개 "
            android:background="@drawable/tag_back"/>
    </LinearLayout>





    


</LinearLayout>