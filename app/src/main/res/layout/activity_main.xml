<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="#0F4C81"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <ImageView
            android:layout_gravity="center_vertical"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:src="@drawable/menu"/>
        <TextView
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:text="냉장고를 비워줘!"
            android:textColor="#79d9cf"
            android:fontFamily="@font/bmeuljiro"/>
    </LinearLayout>
    <LinearLayout
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">
        <LinearLayout
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <TextView
                android:textColor="#262626"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmdohyeon"
                android:text="장바구니"
                android:textSize="20sp"/>
            <ImageView
                android:src="@drawable/spliter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmdohyeon"
                android:text="냉장고"
                android:textSize="20sp"/>
            <ImageView
                android:src="@drawable/spliter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="#979797"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmdohyeon"
                android:text="레시피"
                android:textSize="20sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="80dp"
            android:layout_width="80dp"
            android:layout_height="5dp"
            android:background="#79d9cf"></LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ciercle_question"/>
            <TextView
                android:layout_marginLeft="8dp"
                android:textColor="@color/black"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="마늘"
                android:textSize="35sp"
                android:fontFamily="@font/bmhannapro"/>
            <TextView
                android:fontFamily="@font/bmhannapro"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2개"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ciercle_question"
                android:layout_width="25dp"
                android:layout_height="25dp"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <ImageView
                android:layout_marginLeft="30dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/sub_arrow"/>
            <TextView
                android:textColor="@color/darkGrey"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="깐마늘!!"
                android:textSize="30sp"
                android:fontFamily="@font/bmhannaair"/>

        </LinearLayout>
        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/ciercle_question"/>
            <TextView
                android:textColor="@color/black"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="돼지고기"
                android:textSize="35sp"
                android:fontFamily="@font/bmhannapro"/>
            <TextView
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/bmhannapro"
                android:textColor="@color/black"
                android:textSize="35sp"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="1Kg"/>
            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ciercle_question"
                android:layout_width="25dp"
                android:layout_height="25dp"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="90dp">
        <ImageView
            android:layout_marginLeft="100dp"
            android:src="@drawable/delete_forever"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageView
            android:layout_marginLeft="100dp"
            android:src="@drawable/add_lib"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="60dp"/>
        <ImageView
            android:src="@drawable/add_circle"
            android:layout_gravity="center_vertical"
            android:layout_width="75dp"
            android:layout_height="75dp"/>


    </LinearLayout>

</LinearLayout>